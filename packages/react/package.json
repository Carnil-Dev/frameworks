{
  "name": "@carnil/react",
  "version": "0.1.0",
  "description": "React hooks and components for Carnil Payments SDK",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@carnil/core": "^0.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "keywords": [
    "payments",
    "react",
    "sdk",
    "typescript",
    "hooks"
  ],
  "author": {
    "name": "Carnil Team",
    "email": "hello@carnil.dev",
    "url": "https://carnil.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Carnil-Dev/carnil-sdk.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/Carnil-Dev/carnil-sdk/issues"
  },
  "homepage": "https://carnil.dev",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.10.0",
    "tsup": "^7.2.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "typescript": ">=5.0.0"
  }
}
